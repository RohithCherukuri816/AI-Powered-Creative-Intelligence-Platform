{
    "name": "ai-creative-platform",
    "version": "1.0.0",
    "description": "AI-Powered Creative Intelligence Platform - Transform doodles into stunning designs",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "dev": "node dev.js",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
        "install:all": "npm install && cd frontend && npm install",
        "build": "cd frontend && npm run build",
        "setup": "node scripts/setup.js"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}